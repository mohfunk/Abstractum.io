{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./dist/dec",
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "typeRoots": ["./types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}